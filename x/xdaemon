#!/usr/bin/sh

# start X daemons

wm=$1

# [ -z `pidof dunst` ] && dunst &
# [ -z `pidof xcompmgr` ] && xcompmgr &

if [[ -z `pidof clipmenud` ]]; then
  CM_LAUNCHER=dmenu \
  CM_HISTLENGTH=20 \
  CM_MAX_CLIPS=20 \
  CM_SELECTIONS=clipboard \
  clipmenud &
fi

if [[ -z `pidof sxhkd` ]]; then
  sxhkd < /dev/null >& /dev/null &
fi

