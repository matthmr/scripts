#!/usr/bin/bash
# overrides
alias lf='lf -single'
alias ed="ed -Ep '(ed) '"
alias feh='feh --scale-down -B "#303030"'
alias ip='ip -color=auto'
alias ps='ps --forest --deselect --ppid 2 --deselect --pid 2 -o pid,ppid,user,priority,nice,rss,s,%cpu,%mem,cputime,tty,command'
alias pkill='pkill --echo'
alias kill='/usr/bin/kill --verbose'
alias killall='/usr/bin/killall --verbose'
alias objdump='objdump --disassembler-color=on'

# shortenings
alias chess='gnuchess -g'
alias rp='realpath'
alias xa='xargs -t -r -p'
alias mk='make'
alias g='git'
alias t='tig'
alias gp='git -P'
alias b='busybox'
alias js='jobs -ld'
alias tord='transmission-daemon -e /tmp/transmission.log --log-level=info'
alias torc='transmission-remote'
alias rss='newsboat'
alias mu='ncmpcpp'
alias mail='neomutt'
alias mpvterm='2>/dev/null mpv --vo=tct'
alias ddg='w3m https://html.duckduckgo.com/html/'
alias tolastfm='mpdscribble --no-daemon --log -'
alias e='exec'
alias v='eval'
alias c='clear'
alias em='emacsc'
alias ec='emacsclient'
alias tl='tree -Cpug --si'
alias cs='cl;tux'
alias hi='highlight -O ansi'

# coreutils overrides
alias grep='grep --color=always'
alias ls='eza --color=always -l -g --sort=type --time-style="+%Y%m%d-%w %I%M%p"'
alias rmdir='rmdir -v'
alias mkdir='mkdir -v'
alias chmod='chmod -v'
alias chown='chown -v'
alias rm='rm -Iv'
alias cp='cp -iv'
alias ln='ln -iv'
alias mv='mv -iv'
alias diff='/bin/diff --color=always -u'
alias udiff='/bin/diff -u'
alias ydiff='/bin/diff --color=always -y --suppress-common-lines'
alias patch='patch -u'

# directory
alias pd='popd >/dev/null'
alias lsd='dirs -v'
alias cld='dirs -c'
alias ...='../..'
alias ....='../../..'

# functional
alias man="GROFF_NO_SGR=1 LESS_TERMCAP_md=$'\e[01;31m' LESS_TERMCAP_me=$'\e[0m' LESS_TERMCAP_se=$'\e[0m' LESS_TERMCAP_so=$'\e[01;44;33m' LESS_TERMCAP_ue=$'\e[0m' LESS_TERMCAP_us=$'\e[01;32m' /usr/bin/man"
alias 80c="echo '--------------------------------------------------------------------------------'"
