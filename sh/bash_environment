# XDG
## user (mostly infered)
export XDG_CONFIG_HOME=/home/mh/.config
export XDG_DATA_HOME=/home/mh/.local/share
export XDG_CACHE_HOME=/home/mh/.cache

## System
export XDG_DATA_DIRS=/usr/share:/mnt/ssd/root/usr/share
export XDG_CONFIG_DIRS=/etc/xdg:/mnt/ssd/root/etc/xdg
export XDG_RUNTIME_DIR=/run/user/1000

# Docs
export MANPATH=/usr/share/man:/mnt/ssd/root/usr/share/man:/home/mh/Documents/Man
export INFOPATH=/usr/share/info:/mnt/ssd/root/usr/share/info:/home/mh/Documents/Info

# X
export XAUTHORITY=/home/mh/.Xauthority

# Python
export PYTHONSTARTUP=/home/mh/.pythonrc

# Misc
export LESS="-S -R -I -Q -x2 --use-color --mouse --incsearch"
export PAGER="less"
export EDITOR="emacsc"
