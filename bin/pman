#!/usr/bin/sh

AS=${0##*/}

case $AS in
		'pman')
				PACMANDIR=/mnt/ssd/pacman
				PACMANOPTS=
				;;
		'pmanrc')
				PACMANDIR=/mnt/ssd/pacman-artix
				# artix's pacman does not install with dependencies
				PACMANOPTS=-d
				;;
esac

PACMAN=/usr/bin/pacman
CONFIG=$PACMANDIR/pacman.conf

ARGS=("--color=always --config $CONFIG")

exec $PACMAN $ARGS $PACMANOPTS $@
