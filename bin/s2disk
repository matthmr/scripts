#!/bin/sh

HIBERNATE=/home/mh/Scripts/root/hibernate.sh

if [[ "$USER" != 'root' ]]
then
	echo "You need to be root"
	exit 1
fi

cmd=${0##*/}

case $cmd in
	's2disk')
			echo "[ ** ] Turning swap on"
			echo "[ == ] swapon /mnt/hdd/memory.swap"
			swapon /mnt/hdd/memory.swap
			sleep 2
			echo "[ == ] $HIBERNATE"
			$HIBERNATE
		;;
	'b4disk')
			echo "[ ** ] Turning swap off"
			echo "[ == ] swapoff /mnt/hdd/memory.swap"
			swapoff /mnt/hdd/memory.swap
		;;
esac
