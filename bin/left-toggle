#!/usr/bin/bash

MOUSE='Mouse0'
ACC='0.6'

case $1 in
  '-h'|'--help')
    echo "Usage: left-toggle.sh [enable|disable]"
    exit 1;;
esac

COMMAND=$1

case $COMMAND in
  'enable')
    echo "[ .. ] Enabling left"
    xmodmap -e 'pointer = 1 2 3'
    xinput set-prop $MOUSE 272 0.6
    exit $?;;
  'disable')
    echo "[ .. ] Disabling left"
    xmodmap -e 'pointer = 3 2 1'
    xinput set-prop $MOUSE 272 1
    exit $?;;
esac
