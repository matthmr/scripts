#!/usr/bin/sh

NOTIFY=herbe

usage() {
	echo "Usage:       taskmsg [msg]"
	echo "Description: Sets a message to the notification deamon to *always* display"
}

case $1 in
	'-h'|'--help')
		usage
		exit 1
esac

if [[ -z $1 ]]
then
	usage
	exit 1
fi

TASK="Current task"
MSG="${@:1}"

$NOTIFY -t 0 "$TASK" "$MSG"
