#!/usr/bin/sh

# TODO: this will be superseded by pkgm at ~/Source/pkgm/emacs-nox.txt
EMACS_NOX=/home/mh/Source/emacs-nox/usr/bin/emacs
EMACS_PDMP=/home/mh/Source/emacs-nox/usr/lib/emacs/
#EMACS_PDMP+=$(pacwrap version emacs-nox)
EMACS_VERSION="$(cat /home/mh/Scripts/pkg/emacs-nox.txt)"
EMACS_PDMP+="${EMACS_VERSION%%-*}"
EMACS_PDMP+=/x86_64-pc-linux-gnu/emacs.pdmp

eval $EMACS_NOX --dump-file=$EMACS_PDMP $@
